#!/bin/bash
path_real=../../../dataset/CelebDF/Celeb-real
path_fake=../../../dataset/CelebDF/Celeb-synthesis
output_path=../../../dataset/CelebDF/video_frames/videos

frame_path=../../../dataset/CelebDF/video_frames

rm -rf ${frame_path}/*
mkdir ${frame_path}/videos

touch ${frame_path}/train.txt
touch ${frame_path}/val.txt
touch ${frame_path}/test.txt

count_r=$(ls $path_real | wc -w)
count_f=$(ls $path_fake | wc -w)

count_val_r=$(echo "scale=0; 0.1*$count_r" | bc)
count_val_f=$(echo "scale=0; 0.1*$count_f" | bc)

count_val_r=$(echo ${count_val_r%.*})
count_val_f=$(echo ${count_val_f%.*})

let "count_val_r2 = count_val_r * 2"
let "count_val_f2 = count_val_f * 2"
i=0

#for real videos
for file in $(ls ${path_real} | shuf | head -n 100);
do
	mkdir ${output_path}/video_${i}_folder
	ffmpeg -i ${path_real}/${file} -vf "scale=iw:-1" -loglevel panic -q:v 0 ${output_path}/video_${i}_folder/%05d.jpg
	
	# if [ $i -lt $count_val_r ]
	# then
	# 	echo "${output_path}/video_${i}_folder 1 $(ls ${output_path}/video_${i}_folder | wc -w) 0" >> ${frame_path}/val.txt
	# elif [ $i -lt $count_val_r2 ]
	# then
	echo "${output_path}/video_${i}_folder 1 $(ls ${output_path}/video_${i}_folder | wc -w) 0" >> ${frame_path}/test.txt
	# else
	# 	echo "${output_path}/video_${i}_folder 1 $(ls ${output_path}/video_${i}_folder | wc -w) 0" >> ${frame_path}/train.txt
	# fi
	
	let "i = i + 1"
done

j=0

#for fake videos
for file in $(ls ${path_fake} | shuf | head -n 100);
do
	mkdir ${output_path}/video_${i}_folder
	ffmpeg -i ${path_fake}/${file} -vf "scale=iw:-1" -loglevel panic -q:v 0 ${output_path}/video_${i}_folder/%05d.jpg
	
	# if [ $j -lt $count_val_f ]
	# then
	# 	echo "${output_path}/video_${i}_folder 1 $(ls ${output_path}/video_${i}_folder | wc -w) 1" >> ${frame_path}/val.txt
	# elif [ $j -lt $count_val_f2 ]
	# then
	echo "${output_path}/video_${i}_folder 1 $(ls ${output_path}/video_${i}_folder | wc -w) 1" >> ${frame_path}/test.txt
	# else
	# 	echo "${output_path}/video_${i}_folder 1 $(ls ${output_path}/video_${i}_folder | wc -w) 1" >> ${frame_path}/train.txt
	# fi
	
	let "i = i + 1"
	let "j = j + 1"
done

echo "Done"

sed -i 's$../../../dataset/CelebDF/video_frames$$g' ${frame_path}/*.txt